# Server Configuration
PORT=8000

# Database Configuration
# Format: postgresql://user:password@host:port/database
# Or: host=localhost user=postgres password=postgres dbname=rocketbackend
DATABASE_URL="postgresql://postgres:password@localhost:5432/rocketbackend"

# Connection Pool Configuration
# Maximum number of connections in the pool (default: 20)
DB_POOL_MAX_SIZE=20

# Timeout for acquiring a connection in seconds (default: 30)
DB_POOL_CONNECTION_TIMEOUT=30

# Maximum lifetime of a connection in seconds (default: 1800 = 30 minutes, 0 = no limit)
DB_POOL_MAX_LIFETIME=1800

# Idle timeout for connections in seconds (default: 600 = 10 minutes, 0 = no limit)
DB_POOL_IDLE_TIMEOUT=600
